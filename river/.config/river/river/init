# killall swaybg ; swaybg -i ~/Pictures/wallpapers/annie-spratt-8lnhLDwtcGo-unsplash.jpg -m fill &
# killall swaybg ; swaybg -i ~/Pictures/wallpapers/daria-shevtsova-57355.jpg -m fill &
