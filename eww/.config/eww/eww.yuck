(defvar run false) ;volume_level only runs once 
(defvar expander false)

(defpoll brightness_value
  :interval "5s"
  "light -G"
)

(defpoll volume_level
  :interval "60s"
  :run-while run
  "go/audio/main sink"
)
(defpoll volume_muted
  :interval "1s"
  "wpctl get-volume @DEFAULT_AUDIO_SINK@ | cut -d ' ' -f3"
)
(defpoll mic_level
  :interval "60s"
  :run-while run
  "go/audio/main source"
)

