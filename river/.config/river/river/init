    # And for monocle
    # riverctl map normal $mod M send-layout-cmd rivercarro "main-location monocle"
    # Cycle through layout
    riverctl map normal $mod M send-layout-cmd rivercarro "main-location-cycle left,monocle"

    pkill rivercarro
    # riverctl default-layout rivercarro
    # riverctl spawn rivercarro
    riverctl output-layout rivercarro

    pgrep rivercarro >/dev/null || exec rivercarro -inner-gaps 6 -outer-gaps 12 -no-smart-gaps -per-tag &

    
